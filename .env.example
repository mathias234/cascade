# Cascade Configuration Example
# Copy this file to .env and configure with your values

# RTMP Source Configuration
SOURCE_HOST=rtmp.example.com
SOURCE_PORT=1935

# Stream Configuration
STREAM_TIMEOUT=30
MAX_CONCURRENT_STREAMS=50
STREAM_START_TIMEOUT=15

# Application Configuration
RUST_LOG=info
HLS_PATH=/hls
PORT=8080

# Viewer Tracking Configuration
VIEWER_TRACKING_ENABLED=true
VIEWER_TIMEOUT_SECONDS=30

# FFmpeg Configuration
FFMPEG_HLS_TIME=1                   # Duration of each HLS segment in seconds
FFMPEG_HLS_LIST_SIZE=20             # Number of segments to keep in playlist
FFMPEG_RW_TIMEOUT=100000            # Read/write timeout in microseconds

# Cache Configuration
CACHE_MAX_ENTRIES=200               # Maximum number of cached segments
CACHE_MAX_SEGMENT_SIZE=10485760     # Maximum size per segment in bytes (10MB)
CACHE_TTL_SECONDS=300                # Cache time-to-live in seconds (5 minutes)

# SSL/TLS Configuration (requires ssl feature flag)
SSL_ENABLED=false
SSL_DOMAINS=example.com,www.example.com
SSL_EMAIL=admin@example.com
SSL_STAGING=true
SSL_CERT_CACHE_DIR=/etc/cascade/certs
SSL_PORT=443
HTTP_REDIRECT=true
